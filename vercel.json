{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "apps/backend/src/server.ts"
    },
    {
      "source": "/(.*)",
      "destination": "apps/frontend/$1"
    }
  ]
}